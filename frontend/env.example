# Frontend Environment Configuration Example
# Copy this file to create your environment files

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================

# Backend API base URL - adjust based on environment
NEXT_PUBLIC_API_URL=http://localhost:5000/api

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application name
NEXT_PUBLIC_APP_NAME="MERN Auth App"

# Application version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Application environment
NEXT_PUBLIC_APP_ENV=development

# Default theme (light/dark/system)
NEXT_PUBLIC_DEFAULT_THEME=dark

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features based on environment
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Google Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=

# Sentry for error reporting (optional)
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# Session timeout in minutes
NEXT_PUBLIC_SESSION_TIMEOUT=1440

# JWT token refresh threshold in minutes
NEXT_PUBLIC_TOKEN_REFRESH_THRESHOLD=30

# Maximum login attempts before lockout
NEXT_PUBLIC_MAX_LOGIN_ATTEMPTS=5

# Lockout duration in minutes
NEXT_PUBLIC_LOCKOUT_DURATION=15

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Toast notification duration in milliseconds
NEXT_PUBLIC_TOAST_DURATION=5000

# Enable/disable animations
NEXT_PUBLIC_ENABLE_ANIMATIONS=true

# Sidebar default state
NEXT_PUBLIC_SIDEBAR_DEFAULT_OPEN=true
